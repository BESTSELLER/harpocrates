{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "format": {
      "type": "string",
      "enum": [
        "env",
        "json",
        "secret"
      ]
    },
    "output": {
      "type": "string"
    },
    "owner": {
      "type": "integer"
    },
    "prefix": {
      "type": "string"
    },
    "uppercase": {
      "type": "boolean"
    },
    "secrets": {
      "$ref": "#/$defs/secretsArray"
    }
  },
  "required": [
    "output",
    "secrets"
  ],
  "$defs": {
    "secretsArray": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "pattern": "^(?:\\S+\/)*\\S+$"
          },
          {
            "$ref": "#/$defs/secretsObject"
          }
        ]
      }
    },
    "secretsObject": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^(?:\\S+\/)*\\S+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "format": {
              "type": "string",
              "enum": [
                "env",
                "json",
                "secret"
              ]
            },
            "owner": {
              "type": "integer"
            },
            "filename": {
              "type": "string"
            },
            "prefix": {
              "type": "string"
            },
            "saveAsFile": {
              "type": "boolean"
            },
            "fileName": {
              "type": "string"
            },
            "keys": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "patternProperties": {
                      "^(?:\\S+\/)*\\S+$": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "prefix": {
                            "type": "string"
                          },
                          "saveAsFile": {
                            "type": "boolean"
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}